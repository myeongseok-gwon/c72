<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/card_background"
    android:elevation="2dp">

    <TextView
        android:id="@+id/tvBinId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BIN ID: BIN123"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#2c3e50"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvBinQuantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Required: 5"
            android:textSize="16sp"
            android:textColor="#34495e"/>

        <TextView
            android:id="@+id/tvBinScannedQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scanned: 0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#27ae60"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnScanBin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Scan for this Bin"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_single_scan_background"
        android:textColor="#FFFFFF"/>

</LinearLayout> 